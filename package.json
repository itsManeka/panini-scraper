{
    "name": "panini-scraper",
    "version": "1.0.2",
    "description": "A Node.js TypeScript API for scraping Panini Brasil product information following Clean Architecture principles",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "panini-scraper": "dist/server.js"
    },
    "files": [
        "dist/**/*",
        "README.md",
        "LICENSE",
        "CHANGELOG.md"
    ],
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage --maxWorkers=1",
        "test:ci": "jest --coverage --ci --watchAll=false --maxWorkers=1",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "clean": "rimraf dist",
        "prebuild": "npm run clean",
        "prepare": "npm run build"
    },
    "keywords": [
        "panini",
        "scraper",
        "api",
        "typescript",
        "clean-architecture",
        "web-scraping",
        "comics",
        "books"
    ],
    "author": "Emanuel Ozorio Dias",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/itsmaneka/panini-scraper.git"
    },
    "bugs": {
        "url": "https://github.com/itsmaneka/panini-scraper/issues"
    },
    "homepage": "https://github.com/itsmaneka/panini-scraper#readme",
    "dependencies": {
        "axios": "^1.5.0",
        "cheerio": "^1.0.0-rc.12",
        "express": "^4.18.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.5",
        "@types/node": "^20.6.0",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "eslint": "^8.49.0",
        "jest": "^29.7.0",
        "rimraf": "^5.0.1",
        "ts-jest": "^29.1.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.2.2"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
